<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="18dp"
            android:viewportWidth="287"
            android:viewportHeight="214">
            <path
                android:name="done"
                android:pathData="M 3.07 128.472 L 105.5 208.143 L 283.8 3.283"
                android:strokeColor="#1cc850"
                android:strokeWidth="18"
                android:trimPathEnd="0"/>
        </vector>
    </aapt:attr>
    <target android:name="done">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="500"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
